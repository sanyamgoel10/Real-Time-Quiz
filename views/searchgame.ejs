<html>
    <head>
        <title>
            Real-Time Quiz
        </title>
    </head>
    <body>
        <h1>Real-Time Quiz</h1>
        <p id="ShowMessage">
            Searching for an active quiz game...
        </p>

        <input type="text" id="QuestionId" value="" hidden>
        <table id="QuizQuestions" hidden>
            <thead>
                <tr>
                    <td colspan="4">
                        <strong id="Question"></strong>
                    </td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <button class="option" id="1"></button>
                    </td>
                    <td>
                        <button class="option" id="2"></button>
                    </td>
                    <td>
                        <button class="option" id="3"></button>
                    </td>
                    <td>
                        <button class="option" id="4"></button>
                    </td>
                </tr>
            </tbody>
        </table>        

        <p>
            <button onclick="window.location.href='/logout'">Logout</button>
        </p>
    </body>
</html>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io(`http://${window.location.host}`);

    // Connected to server
    socket.on('connect', () => {
        console.log(`Connected to server with socket ID: ${socket.id}`);
        socket.emit('SearchGame', {
            username: "<%=userName%>",
        });
    });

    // Game Started
    socket.on('StartGame', (data) => {
        let opponent = data['Oppenent'];
        $('#ShowMessage').html(`You have been matched with ${opponent}.`).show();
    });

    // New Question
    socket.on('NewQuestion', (data) => {
        let qid = data['QuestionId'];
        let question = data['Question'];
        let options = data['Options'];
        showQuizQuestions(qid, question, options);
    });

    // Answer submitted
    $('.option').on('click', function(event) {
        let selectedOption = Number(event.target.id);
        socket.emit('SubmitAnswer', {
            QuestionId: $('#QuestionId').val(qid),
            SelectedOption: selectedOption - 1,
        });
        clearQuizQuestions();
    });

    // Quiz Ended, winner declared
    socket.on('QuizEnd', (data) => {
        let winner = data['Winner'];
        clearQuizQuestions();
        if(winner == '<%=userName%>'){
            $('#ShowMessage').html(`You won the quiz. You will be redirected to homepage in 10 seconds.`).show();
        }else{
            $('#ShowMessage').html(`Winner is <u>${winner}</u>. You will be redirected to homepage in 10 seconds.`).show();
        }

        setTimeout(() => {
            window.location.href = '/game'
        }, 10000);
    });

    // Handle disconnection event
    socket.on('disconnect', () => {
        console.log('Disconnected from server');
        $('#ShowMessage').html('Disconnected from the server. Please refresh the page.').show();
    });

    // Handle errors
    socket.on('error', (error) => {
        console.error('Socket error:', error);
        $('#ShowMessage').html(`Error: ${error.message}`).show();
    });

    function showQuizQuestions(qid, question, options){
        $('#ShowMessage').html('').hide();
        $('#QuestionId').val(qid);
        $('#QuizQuestions #Question').html(question);
        $('#QuizQuestions .option#1').html(options[0]);
        $('#QuizQuestions .option#2').html(options[1]);
        $('#QuizQuestions .option#3').html(options[2]);
        $('#QuizQuestions .option#4').html(options[3]);
        $('#QuizQuestions').show();
    }

    function clearQuizQuestions(){
        $('#QuizQuestions').hide();
        $('#QuizQuestions #Question, #QuizQuestions .option#1, #QuizQuestions .option#2, #QuizQuestions .option#3, #QuizQuestions .option#4').html(``);
        $('#QuestionId').val('');
        $('#ShowMessage').html('New question on the way...').show();
    }
</script>